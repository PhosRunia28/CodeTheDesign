---
const { data } = Astro.props
type linkData = {
	to: string
	linkName: string
}

type data = {
	title: string
	links?: linkData[]
	address?: string[]
}
interface Props {
	data: data[]
}
---

<div class="flex flex-col gap-4">
	{
		data.map((data) => (
			<>
				<h4 class="text-lg uppercase">{data.title}</h4>
				<ul class="flex flex-col gap-5 text-sm">
					{data.links &&
						data.links.map((link) => (
							<li>
								<a href={link.to} class="hover:opacity-80">
									{link.linkName}
								</a>
							</li>
						))}
					{data.address &&
						data.address.map((address) => (
							<li>
								<p class="w-full max-w-[14rem]">{address}</p>
							</li>
						))}
				</ul>
			</>
		))
	}
</div>
