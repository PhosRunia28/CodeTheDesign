---
import { cn } from '@utils/util'
import Btn from './Btn'
const { title, subtitle, description, button, center } = Astro.props
interface Props {
	title: string
	subtitle: string
	description: string
	button?: string
	center?: boolean
}
---

<div
	class={cn('flex flex-col gap-5 md:gap-8 lg:gap-10', {
		'text-center': center
	})}
>
	<div class="space-y-2 lg:space-y-3">
		<h5 class="font-semibold text-primary lg:text-lg">{subtitle}</h5>
		<h3 class="text-2xl font-medium lg:text-4xl">{title}</h3>
	</div>
	<p
		class={cn(
			'w-full max-w-lg leading-relaxed opacity-90 sm:leading-loose lg:text-lg lg:leading-[2]',
			{
				'mx-auto': center
			}
		)}
	>
		{description}
	</p>
	{
		typeof button === 'string' ? (
			<Btn
				to="#"
				className={cn('max-w-fit', {
					'text-center': center
				})}
			>
				{button}
			</Btn>
		) : (
			''
		)
	}
</div>
