---
import { Image } from 'astro:assets'
const { title, img, mainDesc, sideDesc } = Astro.props
interface Props {
	title: string
	img: string
	mainDesc: string
	sideDesc: string
}
---

<div class="mx-auto flex w-full max-w-[45rem] flex-col gap-5">
	<h4 class="text-xl font-semibold">{title}</h4>
	<div class="flex flex-col items-start gap-4 sm:flex-row">
		<Image
			src={img}
			height={250}
			width={250}
			alt="about logo"
			class="w-[100px] bg-cover bg-center sm:w-[200px]"
		/>
		<p class="max-w-[39rem] leading-relaxed opacity-80">
			{mainDesc}
		</p>
	</div>
	<p class="leading-relaxed opacity-80">
		{sideDesc}
	</p>
</div>
