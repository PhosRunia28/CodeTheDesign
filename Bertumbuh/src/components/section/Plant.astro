---
import { Image } from 'astro:assets'
import plant from '@assets/plant.png'
const { planted } = Astro.props
interface Props {
	planted: string
}
---

<section class="flex items-end justify-center gap-6 py-16 sm:py-[5.5rem] lg:py-28">
	<Image alt="plant" src={plant} />
	<div class="flex flex-col gap-2">
		<h3 class="text-3xl font-medium sm:text-4xl">{planted}</h3>
		<p class="text-primary">Pohon yang Tertanam</p>
	</div>
</section>
